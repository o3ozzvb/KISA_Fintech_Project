<!-- 은경 -->
<%- layout('layout/layout') %>

<div class="page-content header-clear-medium">

    <div data-height="220" class="caption caption-margins round-medium shadow-large" style="height: 220px;">
        <div class="caption-center">
            <h1 class="center-text color-white bolder font-30">발리여행</h1>
            <p class="boxed-text-large color-white opacity-80">
                Walkthroughs, Splash Screens, Sign Up or Sign In Screens to Start Your Page With
            </p>
            <div class="scale-box">
                <a href="#" onclick="showPayment()" class="button button-round-large button-center-small button-s bg-highlight">

                    <%= pigData.pig.goalAmt %> 남았습니다.</a>
            </div>
        </div>
        <div class="caption-overlay bg-black opacity-40"></div>
        <div class="caption-bg bg-17"></div>
    </div>

    <div class="content-boxed left-20 right-20">
        <div class="content-boxed">
            <h2 class="horizontal-center center-text" onclick="showPayment()">나의 <strong
                        id="myPeriod"><%= pigData.pig.myPeriod %></strong> 예산: <strong
                        id="budgetAmt"><%= pigData.pig.budgetAmt %></strong>원</h2>
            <h2 class="horizontal-center center-text" style="padding-bottom: 10px">돼지가 먹을 돈: <strong
                        id="currAmt"><%= pigData.today_save_money %></strong> 원</h2>
            <script>
              function showPayment() {
                window.location.href = "/main/listPayment";
              }
            </script>
        </div>

        <div class="content-boxed">
            <h1 class="horizontal-center center-text" style="padding-bottom: 10px">모아야 할 돈 : <strong
                        id="savingAmt"><%= pigData.pig.goalAmt %></strong> 원</h1>
            <h2 class="horizontal-center center-text" style="padding-bottom: 10px">돼지가 먹은 돈 : <strong
                        id="savingAmt"><%= pigData.saved_money %></strong> 원</h2>
        </div>

        <div class="content top-20 bottom-40">
            <button type='button' onclick="showlist()"
                    class="horizontal-center round-image shadow-large bottom-30"
                    style="cursor: pointer"><img src="/images/20.png" alt="img" width="150"></button>
            <h2 style="padding-top: 50px" class="center-text">무게 : <strong id="weight"><%= pigData.weight %></strong> kg
            </h2>

            <script>
              function showlist() {
                window.location.href = "/main/newlist";
              }
            </script>
        </div>
        <div class="clear"></div>
    </div>
</div>

