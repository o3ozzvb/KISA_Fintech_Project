<!-- 은경 -->
<%- layout('layout/layout') %>

<body class="theme-light" data-background="none" data-highlight="blue2">
    <div class="page-content">
        <div data-height="cover-header" class="caption bottom-100">
            <div class="caption-center">
                <div class="caption-center">
                    <!-- <form class="caption-center" action="/login" method="post" id="loginForm" name="loginForm"> -->
                    <div class="content-boxed left-40 right-40">
                        <div class="content-boxed">
                            <h2 class="horizontal-center center-text" onclick="showPayment()"
                                style="padding-bottom: 20px; cursor: pointer">나의 <span style="text-decoration: underline" id="myPeriod"></span> 예산: <%= pigData.pig.budgetAmt%><span style="text-decoration: underline" id="budgetAmt"></span>원
                                <br>돼지가 먹을 돈: <span style="text-decoration: underline" id="currAmt"></span> <%= pigData.today_save_money%> 원</h2>
                            <script>
                                function showPayment() {
                                    window.location.href = "/main/listPayment";
                                }
                            </script>
                        </div>
                        <div class="content-boxed">
                            <h2 class="horizontal-center center-text" style="padding-bottom: 20px">돼지가 먹은 돈 : <%= pigData.saved_money%><span style="text-decoration: underline" id="savingAmt"></span>원</h2>
                        </div>


                        <div class="content top-20 bottom-40">
                            <button type='button' onclick="showlist()"
                                class="horizontal-center round-image shadow-large bottom-30"
                                style="cursor: pointer"><img src="/images/20.png" alt="img" width="150"></button>
                            <h2 style="padding-top: 50px" class="center-text">무게 : <%= pigData.weight%><span style="text-decoration: underline" id="weight"></span>kg</h2>

                            <script>
                                function showlist() {
                                    window.location.href = "/main/newlist";
                                }
                            </script>

                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

