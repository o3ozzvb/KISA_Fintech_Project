                            <script>
                                function showPayment() {
                                    window.location.href = "/main/listPayment";
                                }
                            </script>
                        </div>
                        <div class="content-boxed">
                            <h2 class="horizontal-center center-text" style="padding-bottom: 20px">남은 잔액 :<span style="text-decoration: underline" id="savingAmt"></span>원</h2>
                        </div>


                        <div class="content top-20 bottom-40">
                            <button type='button' onclick="showlist()"
                                class="horizontal-center round-image shadow-large bottom-30"
                                style="cursor: pointer"><img src="/images/20.png" alt="img" width="150"></button>
                            <h2 style="padding-top: 50px" class="center-text">Weight : <span style="text-decoration: underline" id="weight"></span>kg</h2>

